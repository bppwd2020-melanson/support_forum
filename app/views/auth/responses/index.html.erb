<h1>Existing Responses</h1>
<% @responses.each do |r| %>
<div class="card">
  <div class="card-header">
      <b>ID: <%= r.id %></b>
  </div>
  <div class="card-body">
    <h5 class="card-title">Response: </h5>
    <p class="card-text"><%= markdown(r.body).html_safe %></p>
    <br>
    <%= link_to "Download Attachment", attachment_url(r, :project_files) %> |
    <%= link_to "Show Response" , auth_responses_show_url(id: r.id) %> |
  <%= link_to "Edit Response" , auth_responses_edit_url(id: r.id) %> |
<%= link_to "Delete Response" , auth_responses_delete_url(id: r.id)%> |
<%= link_to "Add Comment" , comment_url(id: r.id) %>
</div></div>
<br>
  <%end%>
